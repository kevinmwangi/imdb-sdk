{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "UMD",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./types.ts", "./response.ts", "./error.ts", "./movie.ts"],
    "declaration": true,
    "outDir": "./dist",
    "lib": ["ES2020"]
  }
}