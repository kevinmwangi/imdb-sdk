{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./dist/types"],
    "declaration": true,
    "outDir": "./dist",
    "lib": ["dom","ES2020"],
    "types": ["node"]
  }
}